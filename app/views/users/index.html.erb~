<h3>Users</h3>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th></th>
      <% if current_user.admin? %>
        <th>Role</th>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= link_to( "Add", friendships_path({:friend_id => user.id}), :data => { :confirm => "Are you sure?" }, :method => :post, :class => 'btn btn-mini btn-primary') unless user == current_user %></td>
      <% if user.admin? %>
        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
        <td>
          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
          <%= render user %>
        </td>
        <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
       <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
