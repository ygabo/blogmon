
<p><h4> <%= @user.name %></h4></p>
<p><%= @user.email if @user.email %></p>
<br>
<% if @user.friendships.count > 0 %>
    <h5> Following </h5>
    <ul>
      <% for friendship in @user.friendships %>
       <li>
        <%= friendship.friend.name %>
        <% if current_user.id == @user.id %>
            <%= link_to "(x)", friendship, :method => :delete %>
        <% end %>
       </li>
      <% end %>
    </ul>
<% end %>

<div id="blog-user-profile">
<% @user.posts.each do |post| %>
    <div id="blog-entry"> 
        <span id="blog-entry-meta">
            <span id="blog-entry-title"><strong><%= link_to post.title, post %></strong></span>
            <span id="blog-entry-timestamp">  <i class="icon-calendar">  </i><%= post.created_at.to_formatted_s(:long_ordinal) %></span>
        </span>
        <div id="blog-entry-content"><%= post.entry %></div>      
    </div>
<% end %>
</div>

