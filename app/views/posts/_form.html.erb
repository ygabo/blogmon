<%= tinymce %>
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :entry, :input_html => {:class => "tinymce", :rows => 40, :cols => 120} %>
  </div>

  <div class="form-actions">    
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
